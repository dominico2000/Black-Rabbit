<Window x:Class="INSTALLER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INSTALLER"
        mc:Ignorable="d"
        Title="IT-TOOLS" Height="280" Width="575">
    <Window.Background>
        <ImageBrush ImageSource="21325986_1975536809390615_681591990_n.jpg"></ImageBrush>
    </Window.Background>
    <StackPanel Orientation="Vertical" >
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20">USE ANY BUTTON TO START!</TextBlock>
        <Button x:Name="IP" Click="IP_Click" Width="150" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="25" >IP(dec->bin)</Button>
        <Button x:Name="ASCII" Click="ASCII_Click" Width="150" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="2" >ASCII TABLE</Button>
        <Button x:Name="Quit" Click="Quit_Click" Width="150" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="50" >QUIT</Button>




    </StackPanel>


</Window>
